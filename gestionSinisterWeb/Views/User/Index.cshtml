
@{
    Layout = null;
}

@model gestionSinisterWeb.Models.ViewUserModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
   
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">

        <div class="form-group">
            <label for="inputLogin">Login</label>
            @Html.EditorFor(model => model.login, new { htmlAttributes = new { @name = "login", @class = "form-control"} })
        </div>
        <div class="form-group">
            <label for="pass">Password</label>
            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @name = "pass", @class = "form-control", @placeholder = "*****", @type = "password" } })

        </div>
        <div>
            <button type="submit">Connect</button>
        </div>
    </div>
}
</body>
</html>
